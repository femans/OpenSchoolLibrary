{
  "name": "open-school-library",
  "version": "0.1.0",
  "description": "Simple library management system for schools - Open source, privacy-focused, and kid-friendly",
  "private": true,
  "author": "Frido Emans",
  "homepage": "https://openschoollibrary.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/femans/OpenSchoolLibrary.git"
  },
  "bugs": {
    "url": "https://github.com/femans/OpenSchoolLibrary/issues"
  },
  "keywords": [
    "library",
    "school",
    "education",
    "sveltekit",
    "supabase",
    "open-source"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint . --ext .ts,.js,.svelte",
    "lint:fix": "prettier --write . && eslint . --ext .ts,.js,.svelte --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:migrate": "supabase db push",
    "db:seed": "supabase db reset"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-node": "^5.0.0",
    "@sveltejs/adapter-vercel": "^5.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "svelte-eslint-parser": "^1.4.0",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "qrcode": "^1.5.3",
    "sveltekit-i18n": "^2.4.2",
    "zod": "^3.22.4"
  },
  "type": "module"
}
